---
import { Picture } from 'astro-imagetools/components';
const { title, author, publishDate, heroImage, alt } = Astro.props;

let date = new Date(publishDate);
let dateLabel = date.toLocaleDateString('en-US');
---

<article>
	<div class="wrapper wrapper--wide" style="text-align: center;">
		{heroImage && <Picture src={heroImage} alt={title} />}
	</div>
	<div class="wrapper">
		<h1>{title}</h1>
		<time
			><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="0.875em" height="1em"
				><path
					class="fa-primary"
					d="M160 64H288V32C288 14.33 302.3 0 320 0C337.7 0 352 14.33 352 32V64H400C426.5 64 448 85.49 448 112V192H0V112C0 85.49 21.49 64 48 64H96V32C96 14.33 110.3 0 128 0C145.7 0 160 14.33 160 32V64z"
				></path><path
					class="fa-secondary"
					d="M0 192H448V464C448 490.5 426.5 512 400 512H48C21.49 512 0 490.5 0 464V192z"></path>
			</svg> Published on {dateLabel}
		</time>
		<hr />
	</div>
	<slot />
</article>

<style>
	h1 {
		margin: 2rem 0 1rem;
	}
	time {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: var(--size-0);
	}
</style>
