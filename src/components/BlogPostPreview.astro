---
import TimeAgo from 'javascript-time-ago';
import en from 'javascript-time-ago/locale/en' assert { type: 'json' };
import { Picture } from 'astro-imagetools/components';

const { post, author } = Astro.props;
const { frontmatter } = post;

let date = new Date(frontmatter.publishDate);
let dateLabel = date.toLocaleDateString('en-US');

TimeAgo.addDefaultLocale(en);
const timeAgo = new TimeAgo('en-US');
const timeAgoLabel = timeAgo.format(date);
---

<article class="post-preview">
	{
		frontmatter.heroImage && (
			<div class="post-preview-image">
				<Picture src={frontmatter.heroImage} alt={frontmatter.title} />
			</div>
		)
	}
	<div class="post-preview-text">
		<h2 class="h5">
			<a href={post.url}>{frontmatter.title}</a>
		</h2>
		<time>{timeAgoLabel}</time>
		<p>{frontmatter.description}</p>
	</div>
</article>

<style lang="scss" is:global>
	.post-preview {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		margin-top: 3rem;
		padding-top: 3rem;
		border-top: 1px solid var(--border);
		&-image {
			flex: 1 1 200px;
			picture {
				position: sticky !important;
				top: 6rem;
			}
		}
		&-text {
			flex: 1 1 300px;
			align-self: center;
		}
		h2 {
			margin: 0;
		}
		time {
			display: block;
			margin: 0.5rem 0;
			font-size: var(--size-0);
			opacity: 0.7;
		}
		p {
			margin: 0;
		}
	}
</style>
