---
import Layout from '../layouts/BaseLayout.astro';

let title = 'Contact';
let description = 'Get in touch with Stefen';
let permalink = 'https://stefenphelps.com/contact';
---

<Layout {title} {description} {permalink}>
	<article>
		<h1>{title}</h1>
		<p>
			You can connect with me on <a href="https://twitter.com/stefen">Twitter</a> or <a
				href="https://www.linkedin.com/in/stefenphelps/"
				>LinkedIn
			</a>. Otherwise, use the form below.
		</p>
		<form name="contact" action="/success" method="POST" data-netlify="true">
			<label>
				Name
				<input type="text" name="name" required />
			</label>
			<label>
				Email
				<input type="email" name="email" required />
			</label>
			<div>
				<label for="message">Message</label>
				<textarea id="message" name="message" required></textarea>
			</div>
			<button type="submit">Send Message</button>
		</form>
	</article>
</Layout>

<style lang="scss">
	form {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		> * {
			flex: 1 1 300px;
		}
		input,
		textarea {
			display: block;
			width: 100%;
			margin-bottom: 0;
		}
		> button {
			margin-top: 1rem;
			flex-basis: 100%;
		}
	}
</style>
