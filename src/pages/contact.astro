---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Component Script:
let title =  'Contact';
let description = "Get in touch with Stefen";
let permalink = 'https://stefenphelps.com/contact';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
  </head>
  <body>
    <Header />
    <main>
      <article>
        <h1>{title}</h1>
        <p>You can connect with me on <a href="https://twitter.com/stefen">Twitter</a> or <a href="https://www.linkedin.com/in/stefenphelps/">LinkedIn</a>.</p>
      </article>
    </main>
    <Footer />
  </body>
</html>
