---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Component Script:
let title =  "Hi there, I'm Stefen ðŸ˜ƒ";
let description = 'Hey there! Thanks for stopping by, how can I help ya today?';
let permalink = 'https://stefenphelps.com/';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
    <style>
      body {
        max-width: 80rem;
      }
      .home {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        align-items: center;
        margin-top: 4rem;
      }
      .home-image {
        flex: 1 1 230px;
      }
      @media (prefers-color-scheme: dark) {
        .home-image {
          filter: sepia(100) brightness(.5);
        }
      }
      .home-text {
        flex: 1 1 400px;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <article class="home">
        <div class="home-text">
          <h1>Hello, my name is Stefen.</h1>
          <p>I'm a web developer, dad, husband, and overall well-rounded nerd based in Brooksville, Florida ðŸŒ´. I work for myself with some of the best people in the world over at <a href="https://www.kelp.agency">Kelp Creative Agency</a>.</p>
        </div>
        <picture class="home-image">
          <source loading="lazy" type="image/webp" srcset="mustache-face.webp" width="600" height="751" >
          <img loading="lazy" width="600" height="751" src="mustache-face.png" alt="Stefen's Mustache Face">
        </picture>
      </article>
    </main>
    <Footer />
  </body>
</html>
